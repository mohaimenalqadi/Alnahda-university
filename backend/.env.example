# Backend Environment Variables
# Copy to .env and update values

# Server
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://alnahda:alnahda_secure_password@localhost:5432/alnahda_university?schema=public

# Redis
REDIS_URL=redis://:redis_secure_password@localhost:6379

# JWT (Generate secrets with: openssl rand -base64 64)
JWT_ACCESS_SECRET=dev_access_secret_replace_in_production_with_64_char_random_string
JWT_REFRESH_SECRET=dev_refresh_secret_replace_in_production_with_64_char_random_string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW=300000

# MFA
MFA_ISSUER=Al-Nahda University

# Security
BCRYPT_ROUNDS=12
