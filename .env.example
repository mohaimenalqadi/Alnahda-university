# ===========================================
# Al-Nahda University - Environment Variables
# ===========================================
# Copy this file to .env and update values

# Database
POSTGRES_USER=alnahda
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=alnahda_university

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT Secrets (Generate with: openssl rand -base64 64)
JWT_ACCESS_SECRET=CHANGE_THIS_ACCESS_SECRET_MIN_64_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_MIN_64_CHARS
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGINS=http://localhost:3000

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# MFA
MFA_ISSUER=Al-Nahda University
